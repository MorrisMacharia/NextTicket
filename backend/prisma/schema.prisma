generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User{
  id String      @id @default(auto ()) @map ("_id")@db.Objectid
  email String    @unique
  name String
  password String
  createdAT DateTime @default (now())
  updatedAT DateTime @dudateAT
}
model Event{
  id String  @default (auto()) @map ("_id") @db.Objectid
  title String
  date String
  location String
  price float
  description String
  image String
  createdAT DateTime @default(now())
  updatedAT DateTime @dudateAT
}
model Admin {
  id string @id@default(auto()) @map("_id") @db.Objectid
  email string  @unique
  password string
}
